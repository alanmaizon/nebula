{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nebula.local/schemas/coverage.schema.json",
  "title": "Nebula Coverage Artifact",
  "type": "object",
  "additionalProperties": false,
  "required": ["items"],
  "properties": {
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["requirement_id", "status", "notes", "evidence_refs"],
        "properties": {
          "requirement_id": {
            "type": "string",
            "minLength": 1
          },
          "status": {
            "type": "string",
            "enum": ["met", "partial", "missing"]
          },
          "notes": {
            "type": "string",
            "minLength": 1
          },
          "evidence_refs": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    }
  }
}
