{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nebula.local/schemas/draft.schema.json",
  "title": "Nebula Draft Artifact",
  "type": "object",
  "additionalProperties": false,
  "required": ["section_key", "paragraphs", "missing_evidence"],
  "properties": {
    "section_key": {
      "type": "string",
      "minLength": 1
    },
    "paragraphs": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["text", "citations", "confidence"],
        "properties": {
          "text": {
            "type": "string",
            "minLength": 1
          },
          "citations": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["doc_id", "page", "snippet"],
              "properties": {
                "doc_id": { "type": "string", "minLength": 1 },
                "page": { "type": "integer", "minimum": 1 },
                "snippet": { "type": "string", "minLength": 1 }
              }
            }
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        }
      }
    },
    "missing_evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["claim", "suggested_upload"],
        "properties": {
          "claim": { "type": "string", "minLength": 1 },
          "suggested_upload": { "type": "string", "minLength": 1 }
        }
      }
    }
  }
}
