# Production recommended value (CloudFront same-origin API routing)
NEXT_PUBLIC_API_BASE=/api
NEXT_PUBLIC_AUTH_ENABLED=false
NEXT_PUBLIC_COGNITO_DOMAIN=
NEXT_PUBLIC_COGNITO_CLIENT_ID=
NEXT_PUBLIC_COGNITO_REDIRECT_URI=http://localhost:3000
NEXT_PUBLIC_COGNITO_LOGOUT_REDIRECT_URI=http://localhost:3000
NEXT_PUBLIC_COGNITO_SCOPE=openid email profile

